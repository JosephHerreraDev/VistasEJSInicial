<body>
<%- include('../includes/navegacion.ejs') %>
<main>
<% if (productos.length > 0) { %>
<ul>
<% productos.forEach(p => { %>
    <li>
        <p><%= p.datosProducto.titulo %> (<%= p.cant %>)</p>
        <form action="/eliminar-articulo-carrito" method="POST">
        <input type="hidden" value="<%= p.datosProducto.id %>" name="idProducto">
        <button class="btn" type="submit">Eliminar</button>
        </form>
        </li>
<% }) %>
</ul>
<% } else { %>
<h1> No hay Productos en el Carrito</h1>
<% } %>
</main>
